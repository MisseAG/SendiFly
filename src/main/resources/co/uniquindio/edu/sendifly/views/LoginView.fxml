<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.uniquindio.edu.sendifly.controllers.LoginViewController"
            style="-fx-background-color: linear-gradient(to right, #f98144 0%, #c12525 100%);">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="150.0"
              style="-fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 10, 0, 0, 2);">
            <padding>
                <Insets left="50.0" right="50.0" top="20.0" bottom="20.0"/>
            </padding>
            <ImageView fitHeight="100.0" fitWidth="200.0" preserveRatio="true">
                <image>
                    <Image url="@../images/SendiFlyAlt.png"/>
                </image>
            </ImageView>
        </HBox>
    </top>

    <center>
        <StackPane>
            <VBox alignment="CENTER" spacing="30.0" maxWidth="450.0"
                  style="-fx-background-color: white; -fx-background-radius: 25; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 15, 0, 0, 5);">
                <padding>
                    <Insets top="40.0" right="40.0" bottom="40.0" left="40.0"/>
                </padding>

                <Label text="INICIAR SESIÓN"
                       style="-fx-text-fill: #c12525;">
                    <font>
                        <Font name="Yu Gothic UI Semibold" size="42.0" />
                    </font>
                </Label>


                <VBox spacing="25.0" VBox.vgrow="ALWAYS">

                    <VBox spacing="8.0">
                        <Label text="USUARIO" style="-fx-text-fill: #333333;">
                            <font>
                                <Font name="Yu Gothic UI Regular" size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="txtUsername" promptText="Ingrese su usuario"
                                   prefHeight="40.0"
                                   style="-fx-background-color: white; -fx-border-color: #dddddd; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10; -fx-font-size: 14px; -fx-font-family: 'Yu Gothic UI';">
                            <cursor>
                                <Cursor fx:constant="TEXT" />
                            </cursor>
                        </TextField>
                    </VBox>

                    <VBox spacing="8.0">
                        <Label text="CONTRASEÑA" style="-fx-text-fill: #333333;">
                            <font>
                                <Font name="Yu Gothic UI Regular" size="14.0" />
                            </font>
                        </Label>
                        <PasswordField fx:id="txtPassword" promptText="Ingrese su contraseña"
                                       prefHeight="40.0"
                                       style="-fx-background-color: white; -fx-border-color: #dddddd; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10; -fx-font-size: 14px; -fx-font-family: 'Yu Gothic UI';">
                            <cursor>
                                <Cursor fx:constant="TEXT" />
                            </cursor>
                        </PasswordField>
                    </VBox>

                    <VBox spacing="8.0">
                        <Label text="CARGO" style="-fx-text-fill: #333333;">
                            <font>
                                <Font name="Yu Gothic UI Regular" size="14.0" />
                            </font>
                        </Label>
                        <ChoiceBox fx:id="choiceRole" prefHeight="40.0" maxWidth="Infinity"
                                   style="-fx-background-color: white; -fx-border-color: #dddddd; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-size: 13px; -fx-font-family: 'Yu Gothic UI';">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </ChoiceBox>
                    </VBox>

                    <Button fx:id="btnLogin" text="CONTINUAR" maxWidth="Infinity" prefHeight="50.0"
                            style="-fx-background-color: linear-gradient(to right, #f98144 0%, #c12525 100%); -fx-text-fill: white; -fx-background-radius: 25; -fx-font-weight: bold;">
                        <font>
                            <Font name="Yu Gothic UI Semibold" size="14.0" />
                        </font>
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                        <VBox.margin>
                            <Insets top="15.0"/>
                        </VBox.margin>
                    </Button>

                </VBox>

            </VBox>
        </StackPane>
    </center>

</BorderPane>