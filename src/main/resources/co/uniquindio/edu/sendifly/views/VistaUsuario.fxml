<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="480.0" prefWidth="379.0" stylesheets="@../css/usuariostyle.css"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.uniquindio.edu.sendifly.controllers.VistaUsuarioController">
    <children>
        <!-- HEADER -->
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="10.0" style="-fx-background-color: #e12a26; -fx-padding: 0 15 0 15;">
            <children>
                <!-- Logo/App Name -->
                <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/logobajacalidadcambiarurgente.PNG" />
                    </image>
                </ImageView>

                <!-- Spacer -->
                <Region HBox.hgrow="ALWAYS" />

                <!-- User Greeting -->
                <Label fx:id="userGreetingLabel" text="Hola, Usuario" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>

                <!-- Settings Menu Button -->
                <MenuButton mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: white;" text="⚙">
                    <items>
                        <MenuItem fx:id="profileMenuItem" mnemonicParsing="false" onAction="#handleProfileSettings" text="Configurar Perfil" />
                        <MenuItem fx:id="logoutMenuItem" mnemonicParsing="false" onAction="#handleLogout" text="Cerrar Sesión" />
                    </items>
                    <font>
                        <Font size="18.0" />
                    </font>
                </MenuButton>
            </children>
        </HBox>
        <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" prefHeight="350.0" style="-fx-background-color: #f5f5f5;" vbarPolicy="NEVER" VBox.vgrow="ALWAYS">
            <content>

                <!-- MAIN CONTENT -->
                <VBox alignment="TOP_CENTER" focusTraversable="true" spacing="25.0" style="-fx-background-color: #f5f5f5; -fx-padding: 20;">
                    <children>
                        <!-- Welcome Section -->
                        <Label text="Panel de Control" textAlignment="CENTER" textFill="#333333">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>

                        <!-- Primary Actions -->
                        <VBox alignment="CENTER" spacing="15.0">
                            <children>
                                <!-- Nueva Cotización Button -->
                                <Button fx:id="newQuoteButton" maxWidth="500.0" mnemonicParsing="false" onAction="#handleNewQuote" prefHeight="55.0" style="-fx-background-color: #e12a26; -fx-text-fill: white; -fx-background-radius: 8;" text="📋 Nueva Cotización">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Button>

                                <!-- Crear Envío Button -->
                                <Button fx:id="createShipmentButton" maxWidth="500.0" mnemonicParsing="false" onAction="#handleCreateShipment" prefHeight="55.0" style="-fx-background-color: #ee9536; -fx-text-fill: white; -fx-background-radius: 8;" text="📦 Crear Envío">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Button>
                            </children>
                        </VBox>

                        <!-- Tracking Section -->
                        <VBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Label text="Rastrear Envío" textFill="#333333">
                                    <font>
                                        <Font name="System Bold" size="20.0" />
                                    </font>
                                </Label>

                                <HBox alignment="CENTER" maxWidth="500.0" spacing="10.0">
                                    <children>
                                        <TextField fx:id="trackingTextField" maxWidth="1.7976931348623157E308" promptText="Ingrese número de identificación de envío" style="-fx-border-color: #e12a26; -fx-border-radius: 5; -fx-padding: 10;" HBox.hgrow="ALWAYS">
                                            <font>
                                                <Font size="14.0" />
                                            </font>
                                        </TextField>

                                        <Button fx:id="trackButton" mnemonicParsing="false" onAction="#handleTrackShipment" style="-fx-background-color: #e12a26; -fx-text-fill: white; -fx-background-radius: 5;" text="🔍">
                                            <font>
                                                <Font size="16.0" />
                                            </font>
                                        </Button>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <!-- Spacer to push footer down -->
                        <Region VBox.vgrow="ALWAYS" />
                        <VBox alignment="CENTER" prefHeight="341.0" prefWidth="331.0" spacing="20.0">
                            <children>
                                <Label text="Accesos rápidos">
                                    <font>
                                        <Font name="System Bold" size="20.0" />
                                    </font>
                                </Label>
                                <VBox alignment="CENTER" prefHeight="314.0" prefWidth="331.0" spacing="15.0">
                                    <children>
                                        <HBox alignment="CENTER" maxWidth="500.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                                            <children>
                                                <Label style="-fx-font-size: 30px;" text="💳" />
                                                <Region maxWidth="100.0" prefHeight="200.0" prefWidth="200.0" />
                                                <Button maxWidth="200.0" mnemonicParsing="false" style="-fx-background-radius: 8; -fx-text-fill: white; -fx-background-color: #e12a26;" text="Formas de Pago">
                                                    <padding>
                                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                                    </padding></Button>
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER" maxWidth="500.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                                            <children>
                                                <Label style="-fx-font-size: 30px;" text="📍" />
                                                <Region maxWidth="100.0" prefHeight="200.0" prefWidth="200.0" />
                                                <Button maxWidth="200.0" mnemonicParsing="false" style="-fx-background-color: #ee9536; -fx-background-radius: 8; -fx-text-fill: white;" text="Direcciones">
                                                    <padding>
                                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                                    </padding></Button>
                                            </children>
                                        </HBox>
                                        <HBox alignment="CENTER" maxWidth="500.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                                            <children>
                                                <Label style="-fx-font-size: 30px;" text="📄" />
                                                <Region maxWidth="100.0" prefHeight="200.0" prefWidth="200.0" />
                                                <Button maxWidth="200.0" mnemonicParsing="false" style="-fx-background-color: #e12a26; -fx-background-radius: 8; -fx-text-fill: white;" text="Historial de pagos">
                                                    <padding>
                                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                                    </padding></Button>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </children>
                    <padding>
                        <Insets right="20.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>

        <!-- FOOTER -->
        <HBox alignment="CENTER" prefHeight="70.0" spacing="20.0" style="-fx-background-color: #f8f9fa; -fx-border-color: #e9ecef; -fx-border-width: 1 0 0 0; -fx-padding: 0 20 0 20;">
            <children>
                <!-- Download Reports Button -->
                <Button fx:id="downloadReportsButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleDownloadReports" style="-fx-background-color: transparent; -fx-text-fill: #e12a26; -fx-border-color: #e12a26; -fx-border-radius: 5; -fx-background-radius: 5;" text="📊 Descargar Reportes" HBox.hgrow="ALWAYS">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>

                <!-- History Button -->
                <Button fx:id="historyButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleViewHistory" style="-fx-background-color: transparent; -fx-text-fill: #ee9536; -fx-border-color: #ee9536; -fx-border-radius: 5; -fx-background-radius: 5;" text="📋 Historial de Envíos" HBox.hgrow="ALWAYS">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>
