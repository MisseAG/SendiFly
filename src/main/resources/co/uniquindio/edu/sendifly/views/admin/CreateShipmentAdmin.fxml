<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.uniquindio.edu.sendifly.controllers.CreateShipmentAdminController"
            prefWidth="420" prefHeight="460">

    <children>
        <VBox spacing="12" alignment="CENTER" layoutX="50" layoutY="30"
              AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">

            <Label text="Editar Envío" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <TextField fx:id="originField" promptText="Alias de origen" />
            <TextField fx:id="destinationField" promptText="Alias de destino" />
            <TextField fx:id="priceField" promptText="Precio del envío" />

            <DatePicker fx:id="orderDatePicker" promptText="Fecha de pedido" />
            <DatePicker fx:id="deliveryDatePicker" promptText="Fecha de entrega" />
            <TextField fx:id="deliveryTimeField" promptText="Hora de entrega (HH:mm)" />

            <TextField fx:id="statusField" promptText="Estado del envío (ej. Delivered)" />

            <HBox spacing="10" alignment="CENTER">
                <Button text="Guardar" onAction="#handleCreateShipment" />
                <Button text="Cancelar" onAction="#handleCancel" />
            </HBox>

            <Label fx:id="errorLabel" textFill="red" wrapText="true" />
        </VBox>
    </children>
</AnchorPane>
